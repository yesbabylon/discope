{
    "name": "Product",
    "description": "A Product is a variant of a Product Model. There is always at least one Product for a given Product Model.",
    "layout": {
        "groups": [
            {
                "sections": [
                    {
                        "label": "General info",
                        "id": "section.products_Section",
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "50%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "name",
                                                "width": "100%",
                                                "widget": {
                                                    "header": true
                                                }
                                            },
                                            {
                                                "type": "field",
                                                "value": "sku",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "label": "Product Model",
                                                "value": "product_model_id",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "description",
                                                "width": "100%"                                                
                                            }
                                        ]
                                    },
                                    {
                                        "width": "50%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "can_sell",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "is_pack",
                                                "width": "50%",
                                                "readonly": true
                                            }

                                        ]
                                    }                                    
                                ]
                            }
                        ]
                    },
                    {
                        "label": "Prices",
                        "id": "section.prices_section",
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "prices_ids",
                                                "width": "100%",
                                                "widget": {
                                                    "domain": ["is_active", "=", true]
                                                }
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "label": "Prices",
                        "id": "section.groups",
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "groups_ids",
                                                "width": "100%"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "label": "Pack Products",
                        "id": "section.pack_lines",
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "pack_lines_ids",
                                                "width": "100%"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    }                      
                ]
            }
        ]
    }
}
