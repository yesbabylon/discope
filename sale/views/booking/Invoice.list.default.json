{
    "name": "Invoices",
    "description": "This view is intended for displaying the list of invoices.",
    "access": {
        "groups": ["booking.default.user"]
    },
    "layout": {
        "items": [
            {
                "type": "field",
                "value": "name",
                "width": "20%"
            },
            {
                "type": "field",
                "label": "Booking",
                "value": "booking_id",
                "width": "10%"
            },
            {
                "type": "field",
                "value": "date",
                "width": "20%"
            },
            {
                "type": "field",
                "value": "status",
                "width": "20%"
            },
            {
                "type": "field",
                "value": "is_paid",
                "width": "20%"
            },
            {
                "type": "field",
                "value": "price",
                "width": "15%"
            }
        ]
    }
}