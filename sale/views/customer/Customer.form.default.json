{
    "name": "Customer",
    "description": "Basic form for displaying a customer (Partner)",
    "access": {
        "groups": ["sale.default.user", "booking.default.user"]
    },
    "routes": [
        {
            "id": "item.identity.booking.file",
            "label": "Créer une réservation",
            "description": "",
            "icon": "library_books",
            "route": "/bookings",
            "context": {
                "entity": "lodging\\sale\\booking\\Booking",
                "view": "form.create",
                "mode": "edit",
                "purpose": "create",
                "domain": ["customer_identity_id", "=", "object.partner_identity_id.id"],
                "reset": true
            }
        }
    ],
    "layout": {
        "groups": [
            {
                "sections": [
                    {
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "75%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "label": "Name of Customer",
                                                "value": "name",
                                                "width": "100%",
                                                "widget": {
                                                    "heading": true,
                                                    "readonly": true
                                                }
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    }
                ]
            },
            {
                "sections": [
                    {
                        "id": "section.customer_details",
                        "label": "Details",
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "label": "Identity of Customer",
                                                "value": "partner_identity_id",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "label": "Owner Identity",
                                                "value": "owner_identity_id",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "relationship",
                                                "width": "50%",
                                                "visible": false
                                            },
                                            {
                                                "type": "field",
                                                "value": "partner_position",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "label": "Partner Organisation",
                                                "value": "partner_organisation_id",
                                                "width": "50%"
                                            }
                                        ]
                                    }
                                ]
                            },
                            {
                                "columns": [
                                    {
                                        "width": "50%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "label": "Customer Nature",
                                                "value": "customer_nature_id",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "label": "Fare class",
                                                "value": "rate_class_id",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "customer_external_ref",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "ref_account",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "is_tour_operator",
                                                "width": "50%"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "id": "section.customer_bookings",
                        "label": "Bookings",
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "bookings_ids",
                                                "width": "100%",
                                                "widget": {
                                                    "domain": ["state", "in", ["instance", "archive"]]
                                                }
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        ]
    }
}