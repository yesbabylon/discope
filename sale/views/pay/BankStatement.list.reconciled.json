{
    "name": "Bank Statements",
    "description": "This view is intended for displaying the list of bank statements.",
    "access": {
        "groups": ["sale.default.user"]
    },
    "actions": [
        {
            "id": "action.export",
            "label": "Export",
            "description": "Export all reconciled statements for importing into external accounting software.",
            "controller": "lodging_payments_export"
        }
    ],
    "header": {
        "actions": {
            "ACTION.CREATE" : false
        }
    },
    "layout": {
        "items": [
            {
                "type": "field",
                "value": "name",
                "width": "30%"
            },
            {
                "type": "field",
                "value": "date",
                "width": "15%"
            },
            {
                "type": "field",
                "value": "old_balance",
                "width": "10%"
            },
            {
                "type": "field",
                "value": "new_balance",
                "width": "10%"
            },
            {
                "type": "field",
                "value": "bank_account_iban",
                "width": "20%"
            },
            {
                "type": "field",
                "value": "status",
                "width": "10%"
            }
        ]
    }
}