{
    "name": "Bank Statements",
    "description": "This view is intended for displaying the list of bank statements.",
    "access": {
        "groups": ["sale.default.user"]
    },
    "actions": [
        {
            "id": "action.import",
            "label": "Import",
            "description": "Import from a Bank Statements file.",
            "controller": "lodging_payments_import"
        }
    ],
    "header": {
        "actions": {
            "ACTION.CREATE" : false
        }
    },
    "layout": {
        "items": [
            {
                "type": "field",
                "value": "date",
                "width": "10%"
            },
            {
                "type": "field",
                "value": "amount",
                "width": "10%"
            },
            {
                "type": "field",
                "value": "account_holder",
                "width": "15%"
            },
            {
                "type": "field",
                "value": "status",
                "width": "10%"
            }            
        ]
    }
}