{
    "name": "Product Attribute",
    "description": "A Product Attrribute corresponds to the value of an attribute available for a Product of a given Family.",
    "access": {
        "groups": ["pos.default.user", "sale.default.user"]
     },
    "layout": {
        "groups": [
            {
                "sections": [
                    {
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "label": "Product",
                                                "value": "product_id",
                                                "width": "50%",
                                                "widget": {
                                                    "heading": true
                                                }
                                            },
                                            {
                                                "type": "field",
                                                "label": "Option",
                                                "value": "option_id",
                                                "width": "50%",
                                                "widget": {
                                                    "limit": 10
                                                }
                                            },
                                            {
                                                "type": "field",
                                                "label": "Option Value",
                                                "value": "option_value_id",
                                                "width": "50%",
                                                "widget": {
                                                    "limit": 20
                                                }
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        ]
    }
}
