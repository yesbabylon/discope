{
    "name": "Product Model",
    "description": "Product Models act as common denominator for products variants (referred to as Products).",
    "access": {
        "groups": ["pos.default.user", "sale.default.user"]
     },
    "layout": {
        "groups": [
            {
                "sections": [
                    {
                        "label": "General info",
                        "id": "section.product_model",
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "50%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "name",
                                                "width": "100%",
                                                "widget": {
                                                    "heading": true
                                                }
                                            },
                                            {
                                                "type": "field",
                                                "value": "type",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "label": "Family",
                                                "value": "family_id",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "label": "Buying Accounting Rule",
                                                "value": "buying_accounting_rule_id",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "label": "Selling Accounting Rule",
                                                "value": "selling_accounting_rule_id",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "can_buy",
                                                "width": "30%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "can_sell",
                                                "width": "30%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "is_pack",
                                                "width": "30%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "has_own_price",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "stat_section_id",
                                                "width": "50%"
                                            }
                                        ]
                                    },
                                    {
                                        "width": "50%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "consumable_type",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "tracking_type",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "service_type",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "schedule_type",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "schedule_default_value",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "schedule_offset",
                                                "width": "50%"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "label": "Description",
                        "id": "section.description",
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "description_delivery",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "description_receipt",
                                                "width": "50%"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "label": "Products",
                        "id": "section.products",
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "products_ids",
                                                "width": "100%"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "label": "Groups",
                        "id": "section.groups_section",
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "groups_ids",
                                                "width": "100%"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "label": "Categories",
                        "id": "section.categories_section",
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "categories_ids",
                                                "width": "100%"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        ]
    }
}
