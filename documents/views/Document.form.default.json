{
    "name": "Documents",
    "description": "Simple form for displaying a Document",
    "layout": {
        "groups": [
            {
                "sections": [
                    {
                        "label":"Document details",
                        "id": "section.document_info",
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "50%",
                                        "align": "left",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "name",
                                                "width": "100%",
                                                "widget":{
                                                    "heading": true
                                                }
                                            },
                                            {
                                                "type": "field",
                                                "value": "link",
                                                "width": "100%"
                                            }
                                        ]
                                    },
                                    {
                                        "width": "50%",
                                        "align": "right",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "preview_image",
                                                "width": "100%"
                                            }
                                        ]
                                    },
                                    {
                                        "width": "100%",
                                        "align": "left",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "readable_size",
                                                "width": "30%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "type",
                                                "width": "30%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "category_id",
                                                "width": "30%"
                                            },
                                            {
                                                "type": "field",
                                                 "value": "public",
                                                 "width": "10%"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "label":"Tags",
                        "id": "section.document_tag",
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "align": "left",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "tags_ids",
                                                "width": "100%"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "label":"Data",
                        "id": "section.data",
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "align": "left",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "data",
                                                "width": "100%"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        ]
    }
}