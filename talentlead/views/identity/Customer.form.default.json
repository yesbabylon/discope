{
    "name": "Customer",
    "description": "Basic form for displaying a customer (Partner)",
    "layout": {
        "groups": [
            {
                "sections": [
                    {
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "label": "Name of Customer",
                                                "value": "name",
                                                "width": "50%",
                                                "widget": {
                                                    "heading": true,
                                                    "readonly": true
                                                }
                                            },
                                            {
                                                "type": "field",
                                                "label": "Active",
                                                "value": "is_active",
                                                "width": "50%"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    }
                ]
            },
            {
                "sections": [
                    {
                        "id": "section.customer_details",
                        "label": "Details",
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "label": "Identity of Customer",
                                                "value": "partner_identity_id",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "label": "Owner Identity",
                                                "value": "owner_identity_id",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "relationship",
                                                "width": "50%",
                                                "visible": false
                                            },
                                            {
                                                "type": "field",
                                                "value": "partner_position",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "label": "Partner Organisation",
                                                "value": "partner_organisation_id",
                                                "width": "50%"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "id": "section.customer_campaigns",
                        "label": "Campaigns",
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "campaigns_ids",
                                                "width": "100%"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        ]
    }
}